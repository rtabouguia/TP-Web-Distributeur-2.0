<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPass</param-name>
        <param-value>root</param-value>
    </context-param>
    <listener>
        <description>AppContextListener</description>
        <listener-class>fr.m2i.webdistributeur.listener.AppContextListener</listener-class>
    </listener>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>fr.m2i.webdistributeur.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>fr.m2i.webdistributeur.filter.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/customer/*</url-pattern>
        <url-pattern>/provider/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/customer/*</url-pattern>
        <url-pattern>/provider/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProductServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.ShowProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyProductServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.BuyProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.AddProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleProductServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.HandleProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleUserServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.HandleUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>fr.m2i.webdistributeur.servlet.UpdateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProductServlet</servlet-name>
        <url-pattern>/ShowProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyProductServlet</servlet-name>
        <url-pattern>/customer/BuyProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/provider/AddProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleProductServlet</servlet-name>
        <url-pattern>/provider/HandleProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/provider/UpdateProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/admin/AddUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleUserServlet</servlet-name>
        <url-pattern>/admin/HandleUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/admin/UpdateUserServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
